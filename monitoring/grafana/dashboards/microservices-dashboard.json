{
  "dashboard": {
    "id": null,
    "uid": "microservices-dashboard",
    "title": "Microservices Monitoring",
    "tags": [
      "microservices",
      "monitoring"
    ],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "panels": [
      {
        "type": "graph",
        "title": "Requ\u00eates par service",
